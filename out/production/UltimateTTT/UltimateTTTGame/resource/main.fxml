<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" minHeight="600.0" minWidth="600.0" style="-fx-background-color: #fff;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="computer" mnemonicParsing="false" prefWidth="200.0"
                        style="-fx-background-color: #fff; -fx-padding: 10 30; -fx-border-width: 1; -fx-border-color: #000;"
                        text="Play with computer" textAlignment="CENTER">
                    <HBox.margin>
                        <Insets right="25.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="realPlayer" mnemonicParsing="false" prefWidth="200.0"
                        style="-fx-background-color: #fff; -fx-padding: 10 30; -fx-border-width: 1; -fx-border-color: #000;"
                        text="Play with real player" textAlignment="CENTER">
                    <HBox.margin>
                        <Insets left="25.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <Button fx:id="logout" mnemonicParsing="false" style="-fx-background-color: #fff; -fx-padding: 10 30;"
                text="LOGOUT" textAlignment="CENTER" textFill="RED">
            <VBox.margin>
                <Insets top="200.0"/>
            </VBox.margin>
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
    </children>
</VBox>