<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" minHeight="600.0" minWidth="600.0" style="-fx-background-color: #fff;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextField fx:id="name" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" promptText="Username"
                   style="-fx-padding: 10; -fx-background-color: #fff; -fx-border-image-width: 1; -fx-border-color: #000; -fx-border-style: none none solid none;">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <Button fx:id="login" mnemonicParsing="false"
                style="-fx-background-color: #fff; -fx-padding: 10 30; -fx-border-width: 1; -fx-border-color: #000;"
                text="Login" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <font>
                <Font name="Arial Bold" size="17.0"/>
            </font>
        </Button>
    </children>
</VBox>